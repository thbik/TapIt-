<Page x:ConnectionId='1'
    x:Class="TapIt_.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TapIt_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        
    Name="page">

    <Grid Background="#FF00394F" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"  Text="Score="  FontSize="30" HorizontalAlignment="Right" Foreground="#FFAB1A25" FontWeight="Bold"/>
        <TextBlock x:ConnectionId='2' Grid.Row="0" Grid.Column="2" Name="lives" Text="Lives=3" FontSize="30" HorizontalAlignment="Left" Foreground="#FFAB1A25" FontWeight="Bold"/>
        <TextBlock x:ConnectionId='3' Grid.Row="0" Grid.Column="1" Name="score" HorizontalAlignment="Left" FontSize="30" Text="0" Foreground="#FFAB1A25" FontWeight="Bold"/>
        <Button x:ConnectionId='4' Grid.Row="1" Grid.Column="0" Name="nw"                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='5' Grid.Row="1" Grid.Column="1" Name="n"                 HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='6' Grid.Row="1" Grid.Column="2" Name="ne"                  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='7' Grid.Row="2" Grid.Column="0"  Name="wc"                  HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='8' Grid.Row="2" Grid.Column="1"  Name="c"                  HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='9' Grid.Row="2" Grid.Column="2" Name="ec"                  HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='10' Grid.Row="3" Grid.Column="0"  Name="sw"                  HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='11' Grid.Row="3" Grid.Column="1"  Name="s"                  HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="100" Background="Gray"/>
        <Button x:ConnectionId='12' Grid.Row="3" Grid.Column="2" Name="se"                  HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="100" Background="Gray" />
        <TextBlock x:ConnectionId='13' Grid.Row="2" Grid.Column="1" Name="gameover" Text="GAME OVER!" HorizontalAlignment="Center" Visibility="Collapsed"/>
        <Button x:ConnectionId='14' Grid.Column="1" Grid.Row="2" Content="Start"                     Name="Start" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Button x:ConnectionId='15' Grid.Column="1" Grid.Row="2" Content="Back"                    Name="Back" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        <Button x:ConnectionId='16' Grid.Column="1" Grid.Row="2" Content="Play Again"                         Name="PlayAgain" HorizontalAlignment="Center" VerticalAlignment="Center"  Visibility="Collapsed" />
        <Button x:ConnectionId='17' Grid.Column="1" Grid.Row="2" Content="Home"                    Name="Home" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Visibility="Collapsed" />
    </Grid>

</Page>

